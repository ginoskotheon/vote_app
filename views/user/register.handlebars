<div>
	<div class="login">

		<br />
    <h1 class="clementine-text">MacVote</h1>
    <div class="login">
      <a href="/auth/github">

      <div class="btn" id="login-btn">
        <img id="git" src="/assets/img/github_32px.png" alt="github logo" />
        <p>LOGIN WITH GITHUB</p>
      </div>

      </a>
    </div>
    <h2>or ... </h2>

    <hr />
		{{# if hasErrors }}
		<div class="alert alert-danger">
			{{# each messages }}
			<p>
				{{this}}
			</p>
			{{/each}}
		</div>
		{{/if}}

      <form  method="POST">

        <div class="row">
          <label for="email" class="col-sm-2">
          Email</label>
          <div class="col-sm-10">
						<input type="hidden" name="_csrf" value={{csrfToken}}>
            <input type="text" class="form-control" id="email"
            name="email">
          </div>

        </div> <!-- End of form-group -->
        <div class="row">
          <label for="password" class="col-sm-2">
          Password</label>
          <div class="col-sm-10">
            <input type="password" class="form-control" id="password"
            name="password">
          </div>
        </div> <!-- End of form-group -->

        <div class="row loginButton">

          <div class="col-sm-12">
            <button type="submit" >Submit</button>
          </div>

        </div> <!-- End of form-group -->

      </form>
	</div>
</div>
